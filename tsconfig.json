    "lib": ["es2017", "dom"],
    "noImplicitUseStrict": true,
    "outDir": "local_compiled_js",
    "rootDir": ".",
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"],
