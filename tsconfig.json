    "core/tests/karma-globals.ts", 
    "core/tests/karma.conf.ts",
    "core/templates/dev/head/appInit.ts",
    "core/templates/dev/head/mathjaxConfig.ts"
  ],
  "include": ["extensions", "typings"]
}
